
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Register</title>

    <!-- CSS Link -->
    <link rel="stylesheet" href="./style.css">

    <!-- Bootstrap Link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    
        <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
</head>

<body>
 <!-- Register Here -->
 <section id="login" class="my-5">
    <div class="container">
        <div class="row">
            <!-- Column-1 -->
            <div class="col-lg-6">
                <img class="w-100" src="./Images/CollegeStudentsImage-2.jpeg" alt="College Students Image-2"
                    height="100%">
            </div>
            <!-- End Column-1 -->

            <!-- Column-2 -->
            <div class="col-lg-6 bglogin p-4">
                <form method="post" action="/userInsert" enctype="multipart/form-data" id="myvalidation">
                    <!-- logo -->
                    <center>
                        <img class="mb-4 rounded-circle" src="./Images/SignUpImage.jpeg" alt="Sign Up Image" width="20%" height="20%">
                    </center>

                    <!-- Heading (Register Here) -->
                    <h1 class="mb-5 text-center">Register Here</h1>
                    <% if(message.length>0){ %>
                        <div class="alert alert-danger"><%= message %></div>

                   <% } %>

                    <!-- User Name -->
                    <div class="row mb-4">
                        <div class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2">User Name</div>
                        <div class="col-lg-10">
                            <input name="n" class="form-control text-capitalize" type="text" placeholder="Enter your name" required>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="row mb-3">
                        <div class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2">Email</div>
                        <div class="col-lg-10">
                            <input name="e" class="form-control" type="email"  required>
                        </div>
                    </div>

                    <!-- Password -->
                    <div class="row mb-4">
                        <div class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2">Password</div>
                        <div class="col-lg-10">
                            <input name="p" class="form-control" type="password" required>
                        </div>
                    </div>

                    <!-- Confirm Password -->
                    <div class="row mb-4">
                        <div class="col-lg-3 text-center bg-secondary rounded text-light fw-light my-auto p-2">Confirm Password</div>
                        <div class="col-lg-9">
                            <input name="cp" class="form-control" type="password" required>
                        </div>
                    </div>

                    <!-- Choose File -->
                    <div class="row mb-4">
                        <div class="col-lg-3 text-center bg-secondary rounded text-light fw-light my-auto p-2">Profile Image</div>
                        <div class="col-lg-9">
                            <input name="image" class="form-control" type="file" required>
                        </div>
                    </div>
                    

                    <!-- Button (Login) -->
                    <center>
                        <button type="submit" class="btn btn-primary mb-5 btn-lg">Register</button>
                    </center>
                    
                </form>
            </div>
            <!-- End Column-2 -->
        </div>
    </div>
</section>
<!-- End Register Here -->

<!-- Java Script Link -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
crossorigin="anonymous"></script>

<!-- Java Script Link -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
crossorigin="anonymous"></script>

<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.js"></script>
<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script>
$(function () {

    let $registerForm = $('#myvalidation')

    $registerForm.validate({
        rules: {
            username: {
                required: true,
                lettersOnly: true
                
            },
            email: {
                required: true,
                email: true,
            },
            password: {
                required: true,
                minlength: 6,
            },
            Confirmpassword: {
                required: true,
                equalTo:"#password"
            },
            image:{
                required:true,
                image:true
            },

        },
        messages: {
            username: {
                required: "name must be required",
                lettersOnly: "invalid name",
                
                
            },
            email: {
                required: "Email must be required",
                email: "invalid email"
            },
            password: {
                required: "Password must be required",
                minlength: 'min 6 digit',
            },
            Confirmpassword: {
                required: "Confirm Password must be required",
                equalTo:"Password mismatch"
                
            },
            image: {
                required: "image must be required",
                image:"image only"
                
            },
           
        },
        errorPlacement: function (error, element) {
            if (element.is(":radio")) {
                error.appendTo(element.parents(".gen"));
            } else {
                error.insertAfter(element)
            }
        }


    })

    jQuery.validator.addMethod("lettersOnly", function (value, element) {
        return  /^[a-z," "]+$/i.test(value);
    }, "Letters and spaces only please");

    jQuery.validator.addMethod("numericonly", function (value, element) {
        return /^[0-9]+$/i.test(value);
    }, "Please enternumber only.");


     })</script>



    
    
</body>

</html>